// app global css in Stylus form

// Link styles
a
  transition color 0.2s
  color black

  &:hover
    color $blue-8

  .body--dark &
    color white

    &:hover
      color $blue-8

.wrapper-link
  text-decoration none
  color unset

// Change the default body color for light theme
body.body--light
  background-color $grey-1

